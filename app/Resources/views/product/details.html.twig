{% extends 'base.html.twig' %}
{% block body %}
<a href="/" class="btn btn-default">Back to Products</a>
<hr/>
<h2 class="page-header">{{product.name}}</h2>
<ul class="list-group">
  <li class="list-group-item"><strong>Category:</strong> {{product.category.name}}</li>
  <li class="list-group-item"><strong>SKU:</strong> {{product.sku}}</li>
  <li class="list-group-item"><strong>Price:</strong> {{product.price}}</li>
  <li class="list-group-item"><strong>Quanity:</strong> {{product.quantity}}</li>
</ul>
{% endblock %}
